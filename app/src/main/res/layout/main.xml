<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lo_background">

    <LinearLayout
        android:id="@+id/Botton_layout"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:background="@drawable/touming"
                android:id="@+id/about_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                android:src="@drawable/school_new_1"
                android:onClick="onClick_Home" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:text="校园介绍  "
                android:textColor="@color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:background="@drawable/touming"
                android:id="@+id/about_institute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClick_Home"
                android:scaleType="centerInside"
                android:src="@drawable/institute_new_1" />
            <TextView
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园介绍"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:background="@drawable/touming"
                android:scaleType="centerInside"
                android:src="@drawable/notice_new_1"
                android:layout_gravity="center_horizontal"
                android:id="@+id/school_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick_Home" />
            <TextView
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园介绍"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageButton
                android:background="@drawable/touming"
                android:id="@+id/about_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="onClick_Home"
                android:scaleType="centerInside"
                android:src="@drawable/know_new_1" />
            <TextView
                android:paddingTop="5dp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="校园介绍"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_marginBottom="50dp"
        android:id="@+id/talk_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/talk_new"
        android:onClick="onClick_Home"
        android:layout_above="@+id/Botton_layout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text"/>
</RelativeLayout>